
<table border="0" width="100%" cellspacing="0" cellpadding="1" class="tablebackground">
    <tr class="rowtitle0">
    <td>Address/Prefix</td>
    <td>Entity</td>
    <td>Description</td>
    <td>Status</td>
    <td>Last Seen</td>
    </tr>


%  foreach my $ip ( @{ $ipmanager->sortblocks($objects) } ) {
%   $ci = ($ci + 1) % 2;
    <tr class="<% $cssitem{$ci} %>">
	<td align="left">
	  <b><a href="ip-ws.html?id=<% $ip->id %>"><% $ip->address %>/<% $ip->prefix %></a></b>
	</td>   
	<td align="left">
	  <b><% $ip->entity->name %></b>
	</td>   
	<td align="left">
	  <b><% $ip->description %></b>
	</td>   
	<td align="left">
	  <b><% $ip->status->name %></b>
	</td>   
	<td align="left">
	  <b><% $ip->last_seen %></b>
	</td>   
    </tr>
    <tr height="1" class="delimiter">
	<td colspan="5" height="1"></td>
    </tr>
%    }   

</table>

<%args>
$objects => undef

</%args>

<%init>
my $ipmanager = Netdot::IPManager->new();
my %cssitem = ( 0 => "formtablec1", 1 => "formtablec2" );
my $ci = 0;
</%init>

<%doc>

Show a list of IP blocks with relevant info

</%doc>
