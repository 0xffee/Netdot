<%doc>
    Section2 is the second-level options menu
    Individual subsections might be later put in their own file
    as they grow
</%doc>

<%args>
$name => undef
$user => $ENV{REMOTE_USER}
</%args>

<%init>
my $ui = Netdot::UI->new();
my @t;
</%init>

<!-- 2nd level Section  -->
<table border="0"  cellspacing="0" cellpadding="3" width="95%" class="tablebackground">
% if ($name eq "Main" || $name eq ""){
  <tr class="rowtitle0" >
    <td><b>Main Section (Home)</b></td>
  </tr>
  <tr class="rowtitle2" >
   <td>
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="tablebackground">
     <tr>
       <td>Objects related to <% $user %>:
       </td>
     </tr>
   </table>
   </td>
  </tr>
% }elsif ($name eq "Management"){
    <& section_management.mhtml &>
% }elsif ($name eq "Services"){
% }elsif ($name eq "NOC"){
    <& noc.mhtml &>
% }elsif ($name eq "Plant"){
    <& section_cable.mhtml &>
% }elsif ($name eq "Generic"){

  <tr class="rowtitle0" >
    <td><b>Generic Database Operations</b></td>
  </tr>
  <tr class="rowtitle2" >
    <td><font size="-1"><b>Note:</b> These functions do not perform any validation checking. They are intended to provide a direct access to the database.<br>
	<b>Do not edit anything here</b> unless you know what you are doing.<br></font></td>
  </tr>
  <tr class="rowtitle2" >
    <td><br></td>
  </tr>
  <tr class="rowtitle2" >
   <td>
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="tablebackground">
     <tr >
%     map { push @t, $_ unless ($_ =~ /_history/ || $_ eq "Meta") } sort $ui->gettables;
      <td>
            <form action="search_obj.html" method="POST">
            <b>Search</b>:  
            <select name="table">
%           foreach my $t (@t) {
              <option><% $t %></option>
%           }
            </select>
            <input name="submit" value="Go" type="submit">
            </form>
      </td>
      <td>
            <form action="edit.html" method="POST">
            <b>Add New</b>:  
            <select name="table">
%           foreach my $t (@t) {
              <option><% $t %></option>
%           }
            </select>
            <input name="submit" value="Go" type="submit">
            </form>
      </td>
      <td>
            <form action="browse.html" method="POST">
            <b>Browse</b>:  
            <select name="table">
%           foreach my $t (@t) {
              <option><% $t %></option>
%           }
            </select>
            <input name="submit" value="Go" type="submit">
            </form>
      </td>
     </tr>
   </table>
   </td>
  </tr>

% }elsif ($name eq "Reports"){
    <& section_reports.mhtml &>
% }elsif ($name eq "Help"){
% }else{
% }

<!-- End 2nd level section -->

</table>
