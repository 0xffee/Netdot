<%doc>
Supported arguments:

  table  - name of a table in the database
  object - reference to a list of objects in that table for displaying in html
  view   - [row|column]
  sort   - column to sort by
</%doc>
<%args>

%order => undef
%tags => undef
%linksto => undef
%linksfrom => undef
$cellspc => 0
$cellpad => 0
$SORT => undef
$META => undef
$LBL => undef
$PAGE => "view.html"
$VIEW => "column"

</%args>
<%init>
my $ui = Netdot::UI->new();
my %args = undef;

</%init>
<%perl>
# expect name of Table & objects that require sorting
foreach my $j ( keys %ARGS ) {
  next if( $ARGS{$j} !~ /\w+/ || $j eq "submit" );
  $args{$j} = $ARGS{$j};
}
if( exists( $args{view} ) ) {
  $args{view} = lc( $ARGS{view} );
  if( $args{view} eq "row" || $args{view} eq "column" ) {
    $VIEW = $args{view};
  }
}
if( $args{table} ) {
  undef( $META );
  $META = $ui->getmeta( $args{table} );
  if( defined( $META ) ) {
    my $i = 1;
    my @tmp;
    ##############################################
    # if sort arg; check to make sure column doesn't exist & set SORT
    if( exists( $args{sort} ) ) {
      my(%col);
      map { $col{$_}++ } $args{table}->columns;
      if( ! exists( $col{ $args{sort} } ) ) {
        $SORT = $args{sort};
      }
    }
    ##############################################
    # get the label for this table (as defined in Meta)
    $LBL = ($ui->getlabels( $args{table} ))[0];
    if( ! defined( $SORT ) ) {
      $SORT = $LBL;
    }
    ##############################################
    # get linksto info
    %linksto = $ui->getlinksto( $args{table} );
    ##############################################
    # define order
    %order = $ui->getcolumnorderbrief( $args{table} );
    ##############################################
    # Get tags
    %tags = $ui->getcolumntags( $args{table} );
    ##############################################
    # remove id and aliases (if present)
    if( exists( $order{id} ) ) {
      delete( $order{id} );
    }
    if( exists( $order{aliases} ) ) {
      delete( $order{aliases} );
    }
    ##############################################
    # munge so that label is first 
    if( defined( $LBL ) && length( $LBL ) > 0 ) {
      unless( $order{$LBL} == 1 ) {
        my $j = $order{$LBL};
        my %rev = reverse %order;
        my $k = $rev{1} ;
        $order{$k} = $j;
        $order{$LBL} = 1;
      }
    }
  }
}
</%perl>
